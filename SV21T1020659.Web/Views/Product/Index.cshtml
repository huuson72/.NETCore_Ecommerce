@model SV21T1020659.Web.Models.ProductSearchResult

@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form đầu vào tìm kiếm -->
        <form id="frmSearchInput" action="~/Product/Search" method="get">
            <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />
            <input type="hidden" name="@nameof(Model.CurrentPage)" value="@Model.CurrentPage" />

            <div class="row">
                <div class="col-sm-3">
                    <label>Loại hàng:</label>
                    <select class="form-control" name="@nameof(Model.CategoryID)">
                        <option value="0">-- Chọn loại hàng --</option>
                        @foreach (var item in CommonDataService.ListOfCategories())
                        {
                            if (item.CategoryID == Model.CategoryID)
                            {
                                <option value="@item.CategoryID" selected>
                                    @item.CategoryName
                                </option>
                            }
                            else
                            {
                                <option value="@item.CategoryID">
                                    @item.CategoryName
                                </option>

                            }
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <label>Nhà cung cấp:</label>
                    <select class="form-control" name="@nameof(Model.SupplierID)">
                        <option value="0">-- Chọn nhà cung cấp --</option>
                        @foreach (var item in CommonDataService.ListOfSuppliers())
                        {
                            if (item.SupplierID == Model.SupplierID)
                            {
                                <option value="@item.SupplierID" selected>
                                    @item.SupplierName
                                </option>
                            }
                            else
                            {
                                <option value="@item.SupplierID">
                                    @item.SupplierName
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="col-sm-1">
                    <label>Giá từ:</label>
                    <input type="text" class="form-control" name="MinPrice" value="@Model.MinPrice">
                </div>
                <div class="col-sm-1">
                    <label>đến:</label>
                    <input type="text" class="form-control" name="MaxPrice" value="@Model.MaxPrice">
                </div>
                <div class="col-sm-4">
                    <label>Tên mặt hàng cần tìm:</label>
                    <div class="input-group">
                        <input name="SearchValue" type="text" class="form-control" placeholder="Nhập mặt hàng cần tìm" value="@Model.SearchValue" autofocus>
                        <div class="input-group-btn">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <a href="/Product/Create" class="btn btn-primary" style="margin-left:5px">
                                <i class="fa fa-plus"></i> Bổ sung
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div id="searchResult">
            @await Html.PartialAsync("Search", Model) 
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            // Định dạng giá trị khi người dùng nhập
            $("input[name='MinPrice'], input[name='MaxPrice']").on('input', function () {
                var value = $(this).val().replace(/[^\d]/g, ''); // Loại bỏ tất cả ký tự không phải số
                if (value) {
                    $(this).val(parseInt(value).toLocaleString()); // Định dạng giá trị
                }
            });

            // Khi gửi form tìm kiếm
            $("#frmSearchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1); // Mỗi lần tìm kiếm sẽ bắt đầu từ trang 1
            });
        });

        // Hàm tìm kiếm
        function doSearch(page) {
            var searchCondition = $("#frmSearchInput").serializeArray();

            // Loại bỏ dấu chấm khỏi các trường MinPrice và MaxPrice trước khi gửi
            searchCondition.forEach(function (item) {
                if (item.name === "MinPrice" || item.name === "MaxPrice") {
                    item.value = item.value.replace(/[^\d]/g, ''); // Loại bỏ tất cả ký tự không phải số
                }
            });

            searchCondition.push({ name: "page", value: page });

            var action = $("#frmSearchInput").prop("action");
            var method = $("#frmSearchInput").prop("method");

            $.ajax({
                url: action,
                type: method,
                data: searchCondition,
                success: function (data) {
                    $("#searchResult").html(data);
                    formatPrice(); // Định dạng lại giá trị khi nhận lại kết quả
                },
                error: function (xhr, status, error) {
                    alert("Có lỗi xảy ra: " + error);
                }
            });
        }

        // Định dạng lại giá trị sau khi nhận kết quả tìm kiếm từ server
        function formatPrice() {
            $("input[name='MinPrice'], input[name='MaxPrice']").each(function () {
                var value = $(this).val().replace(/[^\d]/g, ''); // Loại bỏ tất cả ký tự không phải số
                if (value) {
                    $(this).val(parseInt(value).toLocaleString()); // Định dạng giá trị
                }
            });
        }
    </script>
}


