@model SV21T1020659.DomainModels.ProductAttribute

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="@Url.Action("Attribute", new { id = Model.ProductID, method = Model.AttributeID == 0 ? "save" : "save", attributeId = Model.AttributeID })">

            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="AttributeID" value="@Model.AttributeID" />

            <div class="form-group">
                <label class="control-label col-sm-2" for="AttributeName">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeName" id="AttributeName" value="@Model.AttributeName"  />
                    @Html.ValidationMessage(nameof(Model.AttributeName))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="AttributeValue">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeValue" id="AttributeValue" value="@Model.AttributeValue"  />
                    @Html.ValidationMessage(nameof(Model.AttributeValue))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="DisplayOrder">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" id="DisplayOrder" value="@Model.DisplayOrder"  />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder))
                </div>
            </div>



            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                    </button>
                    <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })" class="btn btn-default">Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>
