@model SV21T1020659.Web.Models.SupplierSearchResult

@{
    Layout = null;
}

<p style="margin: 10px 0;"> Có <b>@Model.RowCount</b> nhà cung cấp trong tổng số <b>@Model.PageCount</b> trang</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên nhà cung cấp</th>
                <th>Tên Công ty</th>
                <th>Tỉnh thành</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th style="width: 80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.Data)
            {
                <tr>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.ContactName</td>
                    <td>@supplier.Province</td>
                    <td>@supplier.Address</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Email</td>
                    <td class="text-right">
                        <a href="~/Supplier/Edit/@supplier.SupplierID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Supplier/Delete/@supplier.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active">
                            <a class="page-link" href="#">@p</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="javascript:;" onclick="doSearch(@p)">@p</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>
