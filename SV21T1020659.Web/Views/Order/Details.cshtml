 @model SV21T1020659.Web.Models.OrderDetailModel

@{
    ViewBag.Title = "Chi tiết đơn hàng";
}

<div class="box box-primary">
    <div class="box-header text-right">
        <div class="btn-group">
            <div class="btn-group">
                @if (Model.Order.Status != Constants.ORDER_FINISHED)
                {
                    <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                        Xử lý đơn hàng <span class="caret"></span>
                    </button>

                    <ul class="dropdown-menu" role="menu">
                        @if (Model.AvailableActions.Contains("Accept"))
                        {
                            <li>
                                <a href="@Url.Action("Accept", "Order", new { id = Model.Order.OrderID })"
                                   onclick="return confirm('Xác nhận duyệt chấp nhận đơn hàng này?')">Duyệt đơn hàng</a>
                            </li>
                        }
                        @if (Model.AvailableActions.Contains("Shipping"))
                        {
                            <li>
                                <a href="@Url.Action("Shipping", "Order", new { id = Model.Order.OrderID })"
                                   class="btn-modal">Chuyển giao hàng</a>
                            </li>
                        }
                        @if (Model.AvailableActions.Contains("Finish"))
                        {
                            <li>
                                <a href="@Url.Action("Finish", "Order", new { id = Model.Order.OrderID })"
                                   onclick="return confirm('Xác nhận hoàn tất đơn hàng này?')">Xác nhận hoàn tất đơn hàng</a>
                            </li>
                        }
                        @if (Model.AvailableActions.Contains("Cancel"))
                        {
                            <li>
                                <a href="@Url.Action("Cancel", "Order", new { id = Model.Order.OrderID })"
                                   onclick="return confirm('Xác nhận hủy đơn hàng này?')">Hủy đơn hàng</a>
                            </li>
                        }
                        @if (Model.AvailableActions.Contains("Reject"))
                        {
                            <li>
                                <a href="@Url.Action("Reject", "Order", new { id = Model.Order.OrderID })"
                                   onclick="return confirm('Xác nhận từ chối đơn hàng này?')">Từ chối đơn hàng</a>
                            </li>
                        }
                    </ul>
                }


            </div>
            @if (Model.Order.Status != Constants.ORDER_ACCEPTED && Model.Order.Status != Constants.ORDER_SHIPPING && Model.Order.Status != Constants.ORDER_FINISHED)
            {
                <a href="@Url.Action("Delete", "Order", new { id = Model.Order.OrderID })" class="btn btn-sm btn-danger" onclick="return confirm('Có chắc chắn muốn xóa đơn hàng này không?')">
