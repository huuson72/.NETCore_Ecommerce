@section scripts {
    <script>
        $(document).ready(function () {
            // Xử lý khi nhấn vào nút "Chuyển giao hàng" (hoặc bất kỳ nút nào dùng class `btn-modal`)
            $(document).on('click', '.btn-modal', function (e) {
                e.preventDefault(); // Ngăn chặn hành động mặc định
                var url = $(this).attr('href'); // Lấy URL từ href

                // Gửi AJAX request để lấy nội dung của modal
                $.get(url, function (data) {
                    // Gắn nội dung vào modal
                    $('#dialogModal').html(data);
                    // Hiển thị modal
                    $('#dialogModal').modal('show');
                }).fail(function () {
                    alert('Không thể tải dữ liệu. Vui lòng thử lại sau.');
                });
            });

            // Xử lý xóa đơn hàng qua AJAX (code của bạn)
            $('a.btn-danger').click(function (e) {
                if ($(this).text().includes('Xóa đơn hàng')) {
                    e.preventDefault();
                    var deleteUrl = $(this).attr('href');

                    $.ajax({
                        url: deleteUrl,
                        type: "GET",
                        success: function (response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Index", "Order")';
                            } else {
                                alert(response.message || 'Có lỗi xảy ra khi xóa đơn hàng.');
                            }
                        },
                        error: function () {
                            alert('Có lỗi xảy ra khi kết nối tới máy chủ.');
                        }
                    });
                }
            });
        });
    </script>
}
